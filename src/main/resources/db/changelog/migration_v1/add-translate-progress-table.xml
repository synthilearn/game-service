<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="create-translate-progress-table" author="nporshennikov">
        <createTable tableName="translate_progress">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="game_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="old_progress" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="new_progress" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="translate_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="translate_text" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="true_answer" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="correct" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="translate-progress-foreign-key" author="nporshennikov">
        <addForeignKeyConstraint
                baseTableName="translate_progress"
                baseColumnNames="game_id"
                constraintName="fk_game_id_translate_progress_game_id"
                referencedTableName="game"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>